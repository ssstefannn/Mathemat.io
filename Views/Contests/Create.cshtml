@model Mathemat.io.Models.Contest

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Contest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Difficulty" class="control-label"></label>
                <select asp-for="Difficulty" class="form-control">
                    <option value="0">Easy</option>
                    <option value="1">Medium</option>
                    <option value="2">Hard</option>
                </select>
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="0">NotStarted</option>
                    <option value="1">InProgress</option>
                    <option value="2">Finished</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JudgeIDs" class="control-label"></label>
                <select asp-for="JudgeIDs" class="form-control" asp-items="ViewBag.Judges">
                </select>
                <span asp-validation-for="JudgeIDs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProblemIDs" class="control-label"></label>
                <select asp-for="ProblemIDs" class="form-control" asp-items="ViewBag.Problems">
                </select>
                <span asp-validation-for="ProblemIDs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParticipantIDs" class="control-label"></label>
                <select asp-for="ParticipantIDs" class="form-control" asp-items="ViewBag.Participants">
                </select>
                <span asp-validation-for="ParticipantIDs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
