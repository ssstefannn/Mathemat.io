@model IEnumerable<Mathemat.io.Models.ContestSubmissions>

@{
    ViewData["Title"] = "Submissions";
}

<h1>Submissions</h1>

<form asp-controller="Contests" asp-action="ResultsOut" method="post">
    <input name="id" value="@Model.First().ContestID" type="hidden" />
    <button class="btn btn-success" type="submit">Publish results</button>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Solution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Problem.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contestant.FirstName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a href="~/profilePictures/@Html.DisplayFor(modelItem => item.Solution)">@Html.DisplayFor(modelItem => item.Solution)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contest.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Problem.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contestant.FirstName)
            </td>
            <td>
                <a asp-action="SubmissionsEdit" asp-route-contestID="@item.ContestID" asp-route-problemID="@item.ProblemID" asp-route-contestantID="@item.ContestantID">Grade</a>
            </td>
        </tr>
}
    </tbody>
</table>
